{% extends '::base.html.twig' %}

{% block title %}
  {{ parent() }} - Tabelle
{% endblock %}

{% block body %}

  <div id="publication">
    <ul id="volume">
      {% for publication in publications %}
        <li data-url="{{ path('PapyrillioHgvBundle_PublicationLoadNumbers', {'collection': publication.collection, 'volume': publication.volume, 'particle': publication.particle}) }}">
          {% if publication.totalReprint %}
            <i>
          {% endif %}
          {{ publication.collection }} {{ publication.volume }}{{ publication.particle }}
          {% if publication.totalReprint %}
            </i>
          {% endif %}
        </li>
      {% endfor %}
    </ul>
    <ul id="number"></ul>
    <ul id="result"></ul>
  </div>

{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script src="{{ asset('js/publication.js') }}" type="text/javascript"></script>
{% endblock %}