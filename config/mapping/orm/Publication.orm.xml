<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    <entity name="App\Entity\Publication" table="publication">
        <id name="id" type="integer">
            <generator strategy="AUTO"/>
        </id>
        <field name="collection" type="text" nullable="true" />
        <field name="volume" type="integer" nullable="true" />
        <field name="particle" type="text" nullable="true" />
        <field name="number" type="integer" nullable="true" />
        <field name="side" type="text" nullable="true" />
        <field name="extra" type="text" nullable="true" />
        <one-to-many field="children" target-entity="Publication" mapped-by="parent" />
        <many-to-one field="parent" target-entity="Publication" inversed-by="children"/>
    </entity>
</doctrine-mapping>